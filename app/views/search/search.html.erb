<div class="container">
  <%= form_tag(root_path, :method => "get", class: "form-inline", id: "search-form") do %>
      <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search words" %>
        <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
             of using a Rails form helper -->
        <button class="btn btn-primary" type="submit">Search</button>
      </div>
    <% end %>

    <% if params[:search] %>

      <h3><blockquote> Results </blockquote></h3>	
      <p> <b> Word </b> - <%= @word %></p>
      <h3><blockquote> Definitions </blockquote></h3>		
      <% @definitions.each do |x| %>
      <p> <b> <%= x['partOfSpeech'] %> </b> - <%= x['text'] %>  </p>
      <% end %>

      <h3><blockquote> Pronounciations </blockquote></h3>

        <% @pro_results.each do |x| %>
          <p> <%= x['rawType'] %> - <%= x['raw']%></p>
        <% end %>

      <h3><blockquote> Related Words</blockquote> </h3>
        <% @rel_results.each do |x| %>
          <p><%= x['relationshipType']%> = <%= x['words'].join(",") %></p>
        <% end %>

      <h3><blockquote> Top Example </blockquote></h3>
        <p> <%= @top_results['text'] %> </p>

      <h3> <blockquote>Example </blockquote></h3>
        <% @example_results['examples'].each do |x| %>
          <p> <%= x['text']%></p>
        <% end %> 

      <h3> <blockquote>Audio </blockquote></h3>
        <% @audio_results.each do |x| %>
          <p> <%= x['fileUrl']%></p>
        <% end %> 

      <h3> <blockquote>Pictures </blockquote></h3>
        <%= image_tag("@pic_results['payload'][0]['svg']['png_thumb']") %>

 <% end %>

</div>

