<div class="container">
	<div>
		<h1>
			<b><%= params['word'].capitalize %>
			</b>
		</h1>
	</div>
	<div>
		<div class="image">
			<%= image_tag params['picture'] %>
		</div>	
		<div class="top_30"> <b class = "act-as-h3">STEP 1:</b> Say <i><b><%= params['word'].capitalize %> </b></i> 3 times</div>
		<div class="top_30"><b class = "act-as-h3">STEP 2: </b><i><b><%= params['word'].capitalize %> </b></i> used in context</div>
		<% (0..params["examples_count"].to_i).each_with_index do |value,index| %>
			<% if params["example_#{index}_check"] == "1" %>
				<% example = eval(params["example_#{index}"]) %>
				<div class="width_100">
				<%= example['text']%>
				</div>
			<% end %>
		<% end %>
		<div class="top_30"><b class = "act-as-h3">STEP 3: </b><i><b><%= params['word'].capitalize %></b></i> definition</div>
		<% (0..params["definitions_count"].to_i).each_with_index do |value,index| %>
			<% if params["part_of_speech_#{index}_check"] == "1" %>
				<% definition = eval(params["part_of_speech_#{index}"]) %>
				<div class="width_100">
					<%= definition['partOfSpeech'] + " - " + definition['text']%>
				</div>
			<% end %>
		<% end %>
		<div class="top_30"><b class = "act-as-h3">STEP 4: </b><i><b><%= params['word'].capitalize %></b></i> elementary definition</div>
		<% (0..params["elem_def_count"].to_i).each_with_index do |value,index| %>
			<% if params["elem_def_#{index}_check"] == "1" %>
				<% elementary_definition = eval(params["elem_def_#{index}"]) %>
					<div class="width_100">
						<%= elementary_definition['word'] + ' - ' + elementary_definition['grammar'] + ' - ' + elementary_definition['text'] %>
					</div>
			<% end %>
		<% end %>
		<div class="top_30"><b class = "act-as-h3">STEP 5: </b><i><b><%= params['word'].capitalize %></b></i> challenges</div>
		<% (0..params["definitions_count"].to_i).each_with_index do |value,index| %>
			<% if params["relationship_type_#{index}_check"] == "1" %>
				<% related_words = eval(params["relationship_type_#{index}"]) %>
				<div class="width_100">
					<%= related_words['relationshipType'] + " - " + related_words['words'].join(",") %>
				</div>
			<% end %>
		<% end %>
		<div class="top_30"><b class = "act-as-h3">STEP 6: </b><i><b><%= params['word'].capitalize %></b></i> student activity</div>
		<% if params["student_activity"] %>
			<div class="width_100">
				<%= params["student_activity"] %>
			</div>
		<% end %>
		<div class="top_30"><b class = "act-as-h3">STEP 7: </b><i><b><%= params['word'].capitalize %></b></i> mastery activity</div>
			<% if params["mastery_activity"] %>
			<div class="width_100">
				<%= params["mastery_activity"] %>
			</div>
		<% end %>
	</div>
</div>
